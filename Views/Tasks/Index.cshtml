@{
    ViewData["Title"] = "Task Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/tasks.css">

<section class="d-flex border rounded">
    <div class="col col-3 border-end">
        <div class="d-flex flex-column gap-2 p-2">
            <div class="status-option">
                <input type="radio" name="taskType" id="all" checked>
                <label for="all">
                    <i class='bx bx-list-ul' style="color: #74C0FC;"></i>
                    <span>Tất cả</span>
                </label>
            </div>
            <div class="status-option">
                <input type="radio" name="taskType" id="completed">
                <label for="completed">
                    <i class="bx bxs-check-circle" style="color: #63E6BE;"></i>
                    <span>Hoàn thành</span>
                </label>
            </div>
            <div class="status-option">
                <input type="radio" name="taskType" id="processing">
                <label for="processing">
                    <i class='bx bx-loader-circle' style="color: #FFD43B;"></i>
                    <span>Đang thực hiện</span>
                </label>
            </div>
            <div class="status-option">
                <input type="radio" name="taskType" id="unfinished">
                <label for="unfinished">
                    <i class='bx bxs-x-circle' style="color: #FD5353;"></i>
                    <span>Chưa hoàn thành</span>
                </label>
            </div>
        </div>
    </div>
    <div class="col col-9">
        <div class="p-2">
            <div class="w100 mb-2">
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editModal">Thêm
                    việc</button>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover mb-0">
                    <thead class="align-middle text-center text-nowrap">
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Tên việc</th>
                            <th scope="col">Ưu tiên</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Update</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody id="taskList" class="align-middle text-center text-nowrap">
                        <tr>
                            <td colspan="7" class="text-center">No data</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editModalLabel">Thêm nhiệm vụ</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="taskId" value="" hidden />
                <div class="mb-3">
                    <label for="taskName" class="form-label">Tên nhiệm vụ</label>
                    <input type="text" class="form-control" id="taskName" placeholder="Nhập tên việc cần làm">
                </div>
                <div class="mb-3">
                    <label for="taskPriority" class="form-label">Độ ưu tiên</label>
                    <input type="number" class="form-control" id="taskPriority" placeholder="Nhập điểm ưu tiên từ 1-5">
                </div>
                <div class="mb-3">
                    <label for="taskStatus" class="form-label">Trạng thái</label>
                    <select class="form-select" id="taskStatus">
                        <option value="unfinished">Chưa hoàn thành</option>
                        <option value="processing">Đang thực hiện</option>
                        <option value="completed">Đã hoàn thành</option>
                    </select>
                </div>
                <div class="mb-0">
                    <label for="taskNote" class="form-label">Mô tả công việc</label>
                    <textarea class="form-control" id="taskNote" value="" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy bỏ</a>
                <a id="addTask" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
	<script src="~/js/tasks.js"></script>
}